extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        if errores
            div(class="max-w-md mx-auto my-10 bg-red-400 text-white uppercase rounded-xl")
                each error in errores
                    p(class="text-xs text-center p-2 nb-1 font-bold ")= error.msg

        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-lg
                form(method="POST")
                    input(type="hidden"  name="_csrf" value= csrfToken) 
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="password") NUEVA CONTRASEÑA:
                        input#email.w-full.px-3.py-2.border.border-gray-700.rounded-lg.shadow-lg.mb-6.placeholder-gray-400(placeholder="Tu  nuevo password" type="password" name="password")


                    div.flex.items-center
                        input(class="block mx-auto text-center text-white font-bold px-8 py-2 cursor-pointer hover:bg-indigo-600 bg-indigo-500 rounded-lg shadow-md" type="submit" value="Guardar Contraseña")