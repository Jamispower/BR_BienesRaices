extends ../layout/index

block contenido
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        
        if errores
            div(class="max-w-md mx-auto my-10 bg-red-400 text-white uppercase rounded-xl")
                each error in errores
                    p(class="text-xs text-center p-2 nb-1 font-bold ")= error.msg


        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow.rounded-lg
                form(method="POST" action="/auth/login")
                    input(type="hidden"  name="_csrf" value= csrfToken)
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="email") Email:
                        input#email.w-full.px-3.py-2.border.border-gray-700.rounded-lg.shadow-lg.mb-6.placeholder-gray-400(placeholder="Tu email" type="email" name="email")
                    div 
                        label.block.text-sm.uppercase.text-gray-600.mb-1.font-bold(for="password") Contraseña:
                        input#password.w-full.px-3.py-2.border.border-gray-700.rounded-lg.shadow-lg.mb-6.placeholder-gray-400(placeholder="Tu password" type="password" name="password") 
                    
                    div(class="flex items-center justify-between mb-6")
                        a(class ="text-gray-500 text-xs" href="/auth/registro") ¿No tienes cuenta? Registrar Usuario 
                        a(class ="text-gray-500 text-xs" href="/auth/recuperarContrasena") Olvide mi contraseña

                    div.flex.items-center
                        input(class="block mx-auto text-center text-white font-bold px-8 py-2 cursor-pointer hover:bg-indigo-600 bg-indigo-500 rounded-lg shadow-md" type="submit" value="Iniciar Sesión")

