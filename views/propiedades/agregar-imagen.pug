extends ../layout/admin

block styles
    link(rel="stylesheet", href="https://cdnjs.cloudflare.com/ajax/libs/dropzone/5.9.3/dropzone.css")
    meta(name="csrf-token" content= csrfToken)


block contenido
    div.py-5
        h1.text-4xl.my-10.font-extrabold.text-center.mt-2 Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= pagina

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-5xl my-10 md:px-10")
            form(id="imagen" class="dropzone border-dashed border-2 w-full min:h-96 h-auto rounded flex-col justify-center items-center" method="POST" action=`/propiedades/agregar-imagen/${propiedad.id}`)   
                input(type="hidden"  name="_csrf" value= csrfToken)


                
            button(id="publicar" class="block mt-5 mx-auto text-center text-white font-bold px-8 py-2 cursor-pointer hover:bg-indigo-600 bg-indigo-500 rounded-lg shadow-md" type="button") Publicar propiedad

block scripts
    script(src="/js/agregarImagen.js")






